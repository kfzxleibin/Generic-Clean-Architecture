<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lv_row_height"
    android:layout_margin="@dimen/lv_row_padding"
    android:background="@color/cards_background"
    android:padding="@dimen/lv_row_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lv_row_icon_width"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/tvFooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>
</android.support.v7.widget.CardView>